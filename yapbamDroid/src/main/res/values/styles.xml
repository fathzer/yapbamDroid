<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="tableElement">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginTop">1dip</item>
		<item name="android:layout_marginLeft">1dip</item>
	</style>
    
    <style name="tableElement.header">
		<item name="android:background">#ddd</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="tableElement.cell">
		<item name="android:background">#fff</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingLeft">2dp</item>
   	</style>
   	
    <style name="generalNoTitle" parent="AppTheme">
    	<item name="android:windowNoTitle">true</item>
	</style>
</resources>
